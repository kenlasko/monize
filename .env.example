# Environment Configuration
NODE_ENV=development

# Database Configuration
POSTGRES_DB=finance_db
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=changeme_in_production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# OIDC Configuration (Optional - for OpenID Connect authentication)
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_CALLBACK_URL=http://localhost:3000/auth/callback

# API Keys
# Exchange Rate API - Get free key from https://exchangeratesapi.io/ or https://fixer.io/
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Stock API - Get free key from https://www.alphavantage.co/ or https://finnhub.io/
STOCK_API_KEY=your-stock-api-key

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@finance-app.com

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
